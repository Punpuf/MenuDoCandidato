<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp">

    <LinearLayout
        style="@style/HomeCardLinearLayoutStyle"
        android:paddingStart="@dimen/list_item_inner_margin"
        android:paddingEnd="@dimen/list_item_inner_margin">

        <TextView
            style="@style/HomeCardTitleStyle"
            android:id="@+id/list_item_title" />

        <TextView
            style="@style/HomeCardContentStyle"
            android:id="@+id/list_item_content"/>

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/list_item_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v7.widget.CardView>