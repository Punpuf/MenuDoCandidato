<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/visible"
        android:state_checked="true"
        android:drawable="@drawable/ic_visibility"/>

    <item
        android:id="@+id/hidden"
        android:state_checked="false"
        android:drawable="@drawable/ic_visibility_off"/>

    <transition
        android:fromId="@id/hidden"
        android:toId="@id/visible"
        android:drawable="@drawable/transition_hide_pass"/>

    <transition
        android:fromId="@id/visible"
        android:toId="@id/hidden"
        android:drawable="@drawable/transition_show_pass"/>

</animated-selector>
